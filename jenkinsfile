pipeline {
    agent any

    stages {
        stage('Build Java') {
            steps {
                sh 'javac App.java'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t devops-app:latest .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                docker-compose -f /infra/docker-compose.yml build --no-cache app
                docker-compose -f /infra/docker-compose.yml up -d app
                '''
            }
        }
    }
}
