pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'javac App.java'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t prashant/devops-app .'
            }
        }
        stage('Run') {
            steps {
                sh 'docker run -d --rm --name devops-app prashant/devops-app'
            }
        }
    }
}
