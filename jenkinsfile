pipeline {
    agent any

    stages {
        stage('Build Java') {
            steps {
                sh 'javac App.java'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t prashant/devops-app .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                docker stop web || true
                docker rm web || true
                docker run -d -p 9090:8080 --name web prashant/devops-app
                '''
            }
        }
    }
}
