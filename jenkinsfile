pipeline {
    agent any

    stages {
        stage('Build Java') {
            steps {
                sh 'javac App.java'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build --no-cache -t 
                    devops-app:latest .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                docker rm -f shevchaha_app || true
                docker-compose -f /infra/docker-compose.yml up -d --build app
                '''
            }
        }
    }
}
